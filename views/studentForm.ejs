<% layout('boilerplate') -%>


<main class="form-container">
    <h2 class="form-heading">Participant Registration</h2>

    <% if (message) { %>
        <div class="message <%= message.includes('❌') ? 'error' : 'success' %>">
            <%= message %>
        </div>
        <script>
            setTimeout(() => {
                document.querySelector('.message').style.display = 'none';
            }, 5000);
        </script>
    <% } %>



    <form action="/register-student" method="POST" class="student-form">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="phone">Contact No.:</label>
        <input type="text" id="phone" name="phone" required pattern="[0-9]{10}">

        <label for="parentName">Guardian Name:</label>
        <input type="text" id="parentName" name="parentName" required>

        <label for="parentContact">Guardian Contact No.:</label>
        <input type="text" id="parentContact" name="parentContact" required pattern="[0-9]{10}">

        <!-- <label for="parentEmail">Guardian Email:</label>
        <input type="email" id="parentEmail" name="parentEmail" required> -->

        <label for="deviceId">Device ID:</label>
        <input type="text" id="deviceId" name="deviceId" required>

        <label for="schoolName">Institute Name:</label>
        <input type="text" id="schoolName" name="schoolName" required>

        <button type="submit" class="submit-btn">Submit</button>
    </form>
</main>

    
